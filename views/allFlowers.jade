html
  head
  
    link(rel="stylesheet", href="/stylesheets/flower_style.css")
  body
    script(src="/javascripts/form_filled.js")
    h1 #{currentColor} Flowers

    form(action='/', method='get')
      select(name='colorDropDown')
        each color in flowerColors
          option(value='#{color}') #{color}
      input(type='submit' name='colorButton' value='Choose color')

    ul
      each flower in flowers
        li
          a(href='details/#{flower.name}') #{flower.name}

    if currentColor
      form(action'/' method='get')
        input(type='submit' name='clearButton' value='Clear selection')

    //Form to add new flower - Name, Color and Wikipedia page. TODO - upload picture.
    #addNewFlower

      h2 Add New Flower
      
      form(action='/addNewFlower', method="post")
        p Name
          input#newFlowerName(name="name" type="string" placeholder="name")
        p Color
          input#newFlowerColor(name="color" type="text" placeholder="color")
        p Wikipedia Page
         input#newFlowerLink(name="wiki" type="text" placeholder="wikipedia link")
        button(type='submit', value='check_if_filled(name, color)')#saveNewFlower Save